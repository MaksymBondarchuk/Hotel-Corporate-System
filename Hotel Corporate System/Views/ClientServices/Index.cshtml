@model IEnumerable<Hotel_Corporate_System.Models.Database.ClientService>

@{
    ViewBag.Title = "Client Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Client Services</h2>

<div class="jumbotron text-center">
    @using (Html.BeginForm("Index", "ClientServices", FormMethod.Get))
    {
        <p>
            Find by Client: @Html.DropDownList("ClientId", null, new { @class = "btn" })
            Find by Service: @Html.DropDownList("ServiceId", null, new { @class = "btn" })
        </p>
        <div>
            <input type="submit" value="Search" class="btn" />
            @Html.ActionLink("Clear", "Index")
        </div>
    }
</div>

<div class="form-group">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActualAmount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActualAmount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
